<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/textCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:background="@color/colorTextBackground"
            android:gravity="right"
            android:text="@string/startTextScreen"
            android:textColor="@color/colorTextScreen"
            android:textSize="30sp"
            tools:ignore="RtlHardcoded"
            app:layout_constraintTop_toTopOf="parent"
            />

        <RelativeLayout
            android:id="@+id/numberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textCalculate"
            app:layout_constraintEnd_toStartOf="@+id/countLayout"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MCBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/mc"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/MRBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/mr"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/MplusBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/M_plus"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/MminusBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/M_minus"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/sevenBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/sevenBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/eightBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/eightBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/nineBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/nineBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/shareBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreen"
                    android:text="@string/share"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clearBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/clearBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/sqrtBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/sqrt"
                    android:textAllCaps="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/deleteOnBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="1/x"
                    android:textAllCaps="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/signChangeBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/signChange"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/fourBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/fourBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/fiveBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/fiveBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/sixBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/sixBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/multiplicationBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreen"
                    android:text="@string/multiplication"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cosBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/cos"
                    android:textAllCaps="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/sinBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/sin"
                    android:textAllCaps="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/butBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/but"
                    android:textAllCaps="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@id/butBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/but"
                    android:textAllCaps="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/oneBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/oneBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/twoBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/twoBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/threeBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/threeBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/subtractionBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreen"
                    android:text="@string/subtraction"
                    android:textSize="30sp"
                    tools:ignore="UnknownId" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout3"
                android:orientation="horizontal">

                <Button
                    android:id="@id/butBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/but"
                    android:textAllCaps="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@id/butBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/but"
                    android:textAllCaps="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@id/butBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/but"
                    android:textAllCaps="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@id/butBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/but"
                    android:textAllCaps="false"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/zeroBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/zeroBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/pointBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreenNumbers"
                    android:text="@string/pointBtn"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/plusBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreen"
                    android:text="@string/plus"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/equallyBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorBtnScreen"
                    android:text="@string/equals"
                    android:textSize="30sp" />

            </LinearLayout>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>